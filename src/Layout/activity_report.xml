<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg"
    tools:context=".CrimeBackground">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Here's Your Info/Report"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgViewPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    app:srcCompat="@drawable/baseline_person_24" />

                <TextView
                    android:id="@+id/textFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="FirstName:" />

                <TextView
                    android:id="@+id/textLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="LastName:" />

                <TextView
                    android:id="@+id/textPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Phone:" />

                <TextView
                    android:id="@+id/textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Email:" />

                <TextView
                    android:id="@+id/textHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Height:" />

                <TextView
                    android:id="@+id/textWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Weight:" />

                <TextView
                    android:id="@+id/textGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Gender:" />

                <TextView
                    android:id="@+id/textCivilStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Civil Status:" />

                <TextView
                    android:id="@+id/textPagibig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Pagibig:" />

                <TextView
                    android:id="@+id/textPhilhealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Phil Health:" />

                <TextView
                    android:id="@+id/textTin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Tin:" />

                <TextView
                    android:id="@+id/textGsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48sp"
                    android:text="Gsis:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:minHeight="48sp"
                        android:text="Emergency Contact"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textContactName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48sp"
                        android:text="Contact Name:" />

                    <TextView
                        android:id="@+id/textContactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48sp"
                        android:text="Contact Number:" />

                    <TextView
                        android:id="@+id/textRelationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48sp"
                        android:text="Relationship:" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:minHeight="48sp"
                            android:text="Educational Background"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textElemSchool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textElemEd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textSecondarySchool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textSecondaryEd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textVocationalSchool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textVocationalEd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textCollegeSchool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textCollegeEd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textGraduateStudiesSchool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textGraduateStudiesEd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48sp"
                                android:text="TextView" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView20"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:minHeight="48sp"
                                    android:text="Criminal Background"
                                    android:textColor="@color/black" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textQ1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="48sp"
                                        android:text="TextView" />

                                    <TextView
                                        android:id="@+id/textQ2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="48sp"
                                        android:text="TextView" />

                                    <TextView
                                        android:id="@+id/textQ3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="48sp"
                                        android:text="TextView" />

                                    <TextView
                                        android:id="@+id/textQA"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="48sp"
                                        android:text="TextView" />

                                    <TextView
                                        android:id="@+id/textQB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="48sp"
                                        android:text="TextView" />

                                    <TextView
                                        android:id="@+id/textQC"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="48sp"
                                        android:text="TextView" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
